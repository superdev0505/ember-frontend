<br/>

{{#if showForgot}}
  {{input name='forgot-email' type="email" value=identification class='form-control forgot-email-field' placeholder='Enter your email'}}
  <br/>
  <div class="text-center">
    Enter your email address and we will send you a new password.
  </div>

  <br/>
  <button {{action 'resetPassword'}} class="btn btn-default login-reset-password">
    Reset
  </button>

{{else}}
  <form {{action 'authenticate' on='submit'}} class="text-center">
    <label for='identification'>Email</label>
    {{input name='identification' placeholder='Enter Email' type="email"
             value=identification class="form-control identification-field"}}
    <label for='password'>Password</label>
    {{input name='password' placeholder='Enter Password'
             type='password' value=password class="form-control password-field"}}
    <br/>
    <button type='submit'class="btn btn-default submit-password login-submit">
      Login
    </button>
    <div class="loadingLogin hidden text-center">
      <img src="data:image/gif;base64," />
    </div>
  </form>

{{/if}}

<div class="text-center">
<button {{action 'toggleShowForgot'}} class="login-forgot-button">
  {{#if showForgot}}
    back to login
  {{else}}
    forgotten password
  {{/if}}
</button>
</div>
