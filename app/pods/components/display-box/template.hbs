<div class="row display-box">
  {{!-- <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6"> --}}
  <div class="col-xs-12">
    <div class="show-box {{if icon 'has-icon'}}">
      {{#if icon}}
        <div class="show-box-icon">
            <span class="fa fa-4x fa-{{icon}}"></span>
        </div>
      {{/if}}
      <div class="show-info">
        {{#if title}}
          <h4 class="text-center">
            {{title}}
          </h4>
        {{/if}}
        <p>
          {{yield}}
        </p>
      </div>
    </div>
  </div>
</div>
